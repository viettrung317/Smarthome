<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdialog">

    <TextView
        android:id="@+id/txtCancelAddGate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Hủy"
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSaveAddGate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="Lưu"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCancelAddGate" />

    <TextView
        android:id="@+id/textView82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Cổng"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtCancelAddGate"
        app:layout_constraintEnd_toStartOf="@+id/txtSaveAddGate"
        app:layout_constraintStart_toEndOf="@+id/txtCancelAddGate"
        app:layout_constraintTop_toTopOf="@+id/txtCancelAddGate" />

    <TextView
        android:id="@+id/textView92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Mật khẩu"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtCancelAddGate"
        app:layout_constraintTop_toBottomOf="@+id/txtCancelAddGate" />

    <EditText
        android:id="@+id/txtAddPassGate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="10dp"
        android:textColor="@color/color_text"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@+id/txtSaveAddGate"
        app:layout_constraintStart_toStartOf="@+id/textView92"
        app:layout_constraintTop_toBottomOf="@+id/textView92" />

    <TextView
        android:id="@+id/textView112"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Nhập lại mật khẩu"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtAddPassGate"
        app:layout_constraintTop_toBottomOf="@+id/txtAddPassGate" />


    <EditText
        android:id="@+id/txtAddPassGateRes"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edittext"
        android:inputType="numberPassword"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_text"
        app:layout_constraintEnd_toEndOf="@+id/txtAddPassGate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtAddPassGate"
        app:layout_constraintTop_toBottomOf="@+id/textView112" />

    <ProgressBar
        android:id="@+id/progressBar42"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/txtAddPassGateRes"
        app:layout_constraintStart_toStartOf="@+id/txtAddPassGateRes"
        app:layout_constraintTop_toBottomOf="@+id/txtAddPassGateRes" />
</androidx.constraintlayout.widget.ConstraintLayout>
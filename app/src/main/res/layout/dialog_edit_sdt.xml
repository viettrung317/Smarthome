<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_edit"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_aqua"
        android:gravity="center"
        android:padding="12dp"
        android:text="Cập nhật số điện thoại của bạn!"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/txtEditSdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:hint="Nhập số điện thoại của bạn !"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#726c6c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btnCancelAvatar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext"
                android:textColor="@color/white"
                android:text="Cancel"
                android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/btnUpdateAvatar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="UpDate" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>